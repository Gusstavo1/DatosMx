<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.tourist.DetailsFragment"
    android:orientation="vertical"
    android:background="@color/whiteColor">

    <LinearLayout
        android:id="@+id/window"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPlace"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/preview">
        </ImageView>
        <com.codesgood.views.JustifiedTextView
            android:id="@+id/tvTiTle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sitio turístico"
            android:textSize="18sp"
            android:textColor="@color/darkGrayColor"
            android:textStyle="bold"
            android:layout_marginStart="8dp">
        </com.codesgood.views.JustifiedTextView>

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="México es un país entre los Estados Unidos y América Central, conocido por las playas en el Pacífico y el golfo de México, y su diverso paisaje de montañas, desiertos y selvas. ">
        </com.codesgood.views.JustifiedTextView>

        <Button
            android:id="@+id/btnClose"
            android:layout_gravity="right"
            style="@style/CustomButton"
            android:text="cerrar">
        </Button>
    </LinearLayout>

</LinearLayout>