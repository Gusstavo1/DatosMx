<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/whiteColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/whiteColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Progress.Custom" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/darkGrayColor</item>
    </style>

</resources>